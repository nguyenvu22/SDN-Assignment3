<!DOCTYPE html>
<html lang="en">
<%- include ('./patials/head') %>
  <body style="background-image: url('https://t3.ftcdn.net/jpg/04/84/56/02/360_F_484560228_OFLEvMOwpDAJfvAHveEBdVnzu4w6gfCe.jpg');background-size: contain;">
    <div style="margin-top:10px ; color: aqua;">
      <% if(error_msg !='' ){ %>
        <%= error_msg %>
          <% } %>
    </div>
    
  
    <div class="columns is-multiline" style="margin-top: 80px; margin-left: 20px; margin-right: 20px;">
      <% players.forEach(function(player) { %>
        <div class="column is-one-quarter">
          <div class="card">
            <div class="card-image">
              <figure class="image is-3by5">

                <img src="<%= player.image %>" alt="Placeholder image">
              </figure>
            </div>
            <div class="card-content">
              <div class="content">
                Name: <%= player.name %>
              </div>
              <div class="content">
                Nation: <%= player.nation.name %>
              </div>
              <a href="/players/<%=player.id%>" class="btn btn-info">Detail</a>
            </div>

          </div>
        </div>
        <% }) %>
    </div>
  </body>

</html>